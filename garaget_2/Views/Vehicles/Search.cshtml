@model IEnumerable<garaget_2.Models.Vehicle>

@{
    ViewBag.Title = "Search";
}

<h2>Sökningar</h2>

<form method="post" action="Search">

    <input type="search" name="searchTerm" />
    <input type="submit" value="Sök efter info" />
</form>

