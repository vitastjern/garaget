@model IEnumerable<garaget_2.Models.Vehicle>

@{
    ViewBag.Title = "Search";
    ViewBag.RegNRSortParm = "RegNR_desc";
    ViewBag.ColorSortParm = "RegNR_desc";
    ViewBag.BrandSortParm = "RegNR_desc";
    ViewBag.ModelSortParm = "RegNR_desc";
    ViewBag.NRofWheelsSortParm = "RegNR_desc";
    ViewBag.CheckInTimeSortParm = "RegNR_desc";
}

<h2>Sökningar</h2>


@using (Html.BeginForm())
{
    <p>
        
        @Html.TextBox("SearchString")
        <input type="submit" value="Multisök" />
    </p>
}


<br />



<table class="table">



        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.RegNR).ToHtmlString(), "Search", new { sortOrder = ViewBag.RegNRSortParm, searchString = ViewBag.searchString })
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.Color).ToHtmlString(), "Search", new { sortOrder = ViewBag.ColorSortParm, searchString = ViewBag.searchString })
                @*@Html.DisplayNameFor(model => model.Color)*@
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.Brand).ToHtmlString(), "Search", new { sortOrder = ViewBag.BrandSortParm, searchString = ViewBag.searchString })
                @*@Html.DisplayNameFor(model => model.Brand)*@
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.Model).ToHtmlString(), "Search", new { sortOrder = ViewBag.ModelSortParm, searchString = ViewBag.searchString })
                @*@Html.DisplayNameFor(model => model.Model)*@
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.NRofWheels).ToHtmlString(), "Search", new { sortOrder = ViewBag.NRofWheelsSortParm, searchString = ViewBag.searchString })
                @*@Html.DisplayNameFor(model => model.NRofWheels)*@
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(model => model.Brand).ToHtmlString(), "Search", new { sortOrder = ViewBag.BrandSortParm, searchString = ViewBag.searchString })
                @*@Html.DisplayNameFor(model => model.CheckInTime)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NRofWheels)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckInTime)
                </td>
                <td>
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) 
                </td>
            </tr>
}

    </table>
